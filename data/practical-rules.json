        {
          "english": "Different",
          "spanish": "Diferente"
        },
        {
          "english": "Constant",
          "spanish": "Constante"
        }
      ]
    },
    {
      "rule": "Words ending in '-ly' converts to 'mente'",
      "examples": [
        {
          "english": "Constantly",
          "spanish": "Constantemente"
        },
        {
          "english": "Really",
          "spanish": "Realmente"
        }
      ]
    },
    {
      "rule": "Words ending in '-ence'/'-ance' converts to '-cia'",
      "examples": [
        {
          "english": "Compliance",
          "spanish": "Compliancia"
        },
        {
          "english": "Influence",
          "spanish": "Influencia"
